<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactFormActivity"
    android:background="@color/gray">

    <RelativeLayout
        android:id="@+id/menu_relative"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/logo_contact"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_contact"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/title_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_contact"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:text="Edit Kontak"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/oranye"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_relative"
        android:orientation="vertical">

        <EditText
            android:id="@+id/form_name_edit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_edit_text"
            android:inputType="textPersonName"
            android:hint="Masukan Nama"
            android:textColorHint="@color/grayish"
            android:drawableLeft="@drawable/icon_contact"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/form_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_edit_text"
            android:inputType="phone"
            android:hint="Masukan Nomor"
            android:textColorHint="@color/grayish"
            android:drawableLeft="@drawable/icon_phone_number"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/form_mail_edit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_edit_text"
            android:inputType="textEmailAddress"
            android:hint="Masukan Email"
            android:textColorHint="@color/grayish"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/form_delete"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_button"
            android:text="Hapus Kontak"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/form_submit_edit"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_button"
            android:text="Simpan Perubahan"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>